@page "/goalkeepers"
@inject ILogger<Goalkeepers> Logger 
@using BlazTest.Components.Pages.Components

<PageTitle>Goalkeepers</PageTitle>

<h1>Goalkeepers</h1>

<p>Showing players data</p>

<PlayerTable players="typedPlayers"></PlayerTable>

@code {
    public IEnumerable<Player>? typedPlayers { get; set; }

    protected override async Task OnInitializedAsync(){

        await Home.taskCompletionSource.Task;

        if(Home.Players!=null) {
            typedPlayers = Home.Players.Where(p => p.Position == 1);
        }
        
        await base.OnInitializedAsync();
    } 
}


